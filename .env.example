# Reverie House Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
USE_POSTGRESQL=true
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=reverie_house
POSTGRES_USER=reverie
POSTGRES_PASSWORD=see_/srv/secrets/reverie.postgres.password

# Application
FLASK_ENV=production
FLASK_DEBUG=false
SECRET_KEY=see_/srv/secrets/reverie.flask.secret

# Work Token Encryption
WORK_TOKEN_SECRET=see_/srv/secrets/reverie.worktoken.secret

# Password Encryption
APP_PASSWORD_KEY=see_/srv/secrets/reverie.encryption.key

# External Services
BLUESKY_PDS_URL=https://bsky.social
BLUESKY_FIREHOSE_URL=wss://bsky.network

# Admin Configuration
ADMIN_HANDLE=your_handle.bsky.social
ADMIN_DID=your_did_plc_identifier

# Service Ports
ADMIN_PORT=5001
REVERIE_PORT=5002
AVIARY_PORT=5003

# Logging
LOG_LEVEL=INFO
LOG_FILE=/srv/reverie.house/logs/reverie.log

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_HOUR=100

# Feature Flags
ENABLE_QUESTS=true
ENABLE_PIGEONS=true
ENABLE_COURIER=true
ENABLE_SPECTRUM=true
