[Unit]
Description=Reverie House Feed Generator
After=network.target

[Service]
Type=simple
User=errantson
Group=errantson
WorkingDirectory=/srv/reverie.house
Environment="POSTGRES_HOST=localhost"
Environment="POSTGRES_PORT=5432"
Environment="POSTGRES_DB=reverie_house"
Environment="POSTGRES_USER=reverie"
Environment="POSTGRES_PASSWORD_FILE=/srv/secrets/reverie.postgres.password"
# Note: No .env file needed - secrets read from POSTGRES_PASSWORD_FILE
ExecStart=/usr/bin/python3 /srv/reverie.house/core/feedgen_server.py
Restart=always
RestartSec=10

# Security
NoNewPrivileges=true
PrivateTmp=true

# Resource limits
MemoryMax=256M
TasksMax=64

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=feedgen

[Install]
WantedBy=multi-user.target
